<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <declare-styleable name="XButton">
        <!--半径-->
        <attr name="buttonRadius" format="integer" />
        <!--背景颜色-->
        <attr name="backgroundColor" format="color" />
        <!--是否填充-->
        <attr name="isFill" format="boolean" />
        <!--边框-->
        <attr name="buttonStrokeWidth" format="integer" />
        <!--字体颜色-->
        <attr name="buttonTextColor" format="color" />
        <!--指定圆角-->
        <attr name="whiceCirc">
            <flag name="topLeft" value="0" />
            <flag name="topRight" value="1" />
            <flag name="bottomLeft" value="2" />
            <flag name="bottomRight" value="3" />
        </attr>
        <!--是否反转-->
        <attr name="isReversal" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SlideHorizontalView">
        <!--主色-->
        <attr name="x_main_color" format="color" />
        <!--辅助色-->
        <attr name="x_second_color" format="color" />
        <!--文字颜色-->
        <attr name="x_text_color" format="color" />
        <!--显示数值-->
        <attr name="x_show_number" format="boolean" />
        <!--设置默认值-->
        <attr name="x_default_value" format="integer" />
    </declare-styleable>

    <declare-styleable name="SportsView">
        <!--主色-->
        <attr name="x_mainColor" format="color" />
        <!--辅助色-->
        <attr name="x_secondColor" format="color" />
        <!--圆环开始度数-->
        <attr name="x_angleStart" format="integer" />
        <!--默认数值-->
        <attr name="x_defaultValue" format="integer" />

    </declare-styleable>
</resources>